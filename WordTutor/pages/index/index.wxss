.list{
    width: 92%;
    padding-top: 20rpx;
    margin: 0 auto;
}
.list .list-li{
    width: calc(100%-42rpx);
    background: #FFF;
    margin-bottom: 20rpx;
    padding:0 20rpx;
    border:1px solid #F1F1F1;
    border-radius: 2px;
}
.list .list-title{
    width: 100%;
    height: 60rpx;
    line-height: 30px;
    font-size:36rpx;
    border-bottom:1px solid #F1F1F1;
}
.list .list-content{
    padding: 20rpx 0;
    color: #999;
